! xrdb ~/.Xresources
!

*background:  #202020
*foreground:  #B0B0B0

!black
*color0:      #000000
*color8:      #666666

!red
*color1:      #9e1828
*color9:      #cf6171

!green
*color2:      #aece92
*color10:     #B8EB6C
! c5f779

!yellow
*color3:      #968a38
*color11:     #fff796

!blue
*color4:      #557DA1
*color12:     #4B84B8

!magenta
*color5:      #963c59
*color13:     #cf9ebe

!cyan
*color6:      #45A397
*color14:     #71bebe

!white
*color7:      #bebebe
*color15:     #ffffff

! fixes font spacing
URxvt.letterSpace:      -1

URxvt*cursorColor:      yellow

URxvt*urgentOnBell:     true

URxvt*loginShell:       true
URxvt*saveLines:        300000  ! 600M RAM usage `cat -e /dev/urandom`
URxvt*buffered:         true
URxvt*font:             xft:DejaVu Sans Mono:size=9
URxvt*scrollBar_right:  false
URxvt*scrollBar:        false

URxvt*transparent:      true
URxvt*shading:          25

URxvt*scrollTtyOutput:      false
URxvt*scrollWithBuffer:     true
URxvt*scrollTtyKeypress:    true

URxvt*cutchars:             ":\\`\"'&()*,;<=>?@[]^{|}/! "

! Clickable URL (matcher)
URxvt.perl-ext-common:  default,matcher
URxvt.matcher.button:   2
URxvt.url-launcher:     /usr/bin/firefox

Xft.autohint:       1
Xft.antialias:      1
Xft.hinting:        1
Xft.hintstyle:      hintfull
Xft.rgba:           none
Xft.lcdfilter:      lcdnone

! Fixes emacs flashing bars at startup
! evaluated much sooner than init.el
emacs.menuBar:              off
emacs.toolBar:              off
emacs.verticalScrollBars:   off
emacs.font:                 DejaVu Sans Mono-9
emacs.background:           #000000
emacs.cursorBlink:          off
