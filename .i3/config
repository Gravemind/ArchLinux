# This configuration uses Mod1 and Mod3. Make sure they are mapped properly using xev(1)
# and xmodmap(1). Usually, Mod1 is Alt (Alt_L) and Mod3 is Windows (Super_L)

set $ModKey Mod4
set $resize_size 100

set $screen_1 DVI-0
set $screen_2 HDMI-0


# ISO 10646 = Unicode
font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1

# Use Mouse+Mod1 to drag floating windows to their wanted position
floating_modifier $ModKey

# Fullscreen ($ModKey+f)
bind $ModKey+41 f

# Stacking ($ModKey+h)
bind $ModKey+43 s

# Tabbed ($ModKey+w)
bind $ModKey+25 T

# Default ($ModKey+e)
bind $ModKey+26 d

# Toggle tiling/floating of the current window ($ModKey+Shift+Space)
bind $ModKey+Shift+65 t

# Go into the tiling layer / floating layer, depending on whether
# the current window is tiling / floating (Mod1+t)
bind $ModKey+28 focus ft

# Focus ($ModKey+j/k/l/;)
bind $ModKey+44 h
bind $ModKey+45 j
bind $ModKey+46 k
bind $ModKey+47 l
# (alternatively, you can use the cursor keys:)
bindsym $ModKey+Left h
bindsym $ModKey+Down j
bindsym $ModKey+Up k
bindsym $ModKey+Right l

# Focus Container ($ModKey+Mod1+j/k/l/;)
bind $ModKey+Mod1+44 wch
bind $ModKey+Mod1+45 wcj
bind $ModKey+Mod1+46 wck
bind $ModKey+Mod1+47 wcl
# (alternatively, you can use the cursor keys:)
bindsym $ModKey+Mod1+Left wch
bindsym $ModKey+Mod1+Down wcj
bindsym $ModKey+Mod1+Up wck
bindsym $ModKey+Mod1+Right wcl

# Snap (Mod1+Control+j/k/l/;)
bind $ModKey+Control+44 sh
bind $ModKey+Control+45 sj
bind $ModKey+Control+46 sk
bind $ModKey+Control+47 sl
# (alternatively, you can use the cursor keys:)
bindsym $ModKey+Control+Left sh
bindsym $ModKey+Control+Down sj
bindsym $ModKey+Control+Up sk
bindsym $ModKey+Control+Right sl

# Move (Mod1+Shift+j/k/l/;)
bind $ModKey+Shift+44 mh
bind $ModKey+Shift+45 mj
bind $ModKey+Shift+46 mk
bind $ModKey+Shift+47 ml
# (alternatively, you can use the cursor keys:)
bindsym $ModKey+Shift+Left mh
bindsym $ModKey+Shift+Down mj
bindsym $ModKey+Shift+Up mk
bindsym $ModKey+Shift+Right ml

# Move Container (Mod1+Shift+j/k/l/;)
bind $ModKey+Mod1+Shift+44 wcmh
bind $ModKey+Mod1+Shift+45 wcmj
bind $ModKey+Mod1+Shift+46 wcmk
bind $ModKey+Mod1+Shift+47 wcml
# (alternatively, you can use the cursor keys:)
bindsym $ModKey+Mod1+Shift+Left wcmh
bindsym $ModKey+Mod1+Shift+Down wcmj
bindsym $ModKey+Mod1+Shift+Up wcmk
bindsym $ModKey+Mod1+Shift+Right wcml

mode "resize" {

        bindsym Left resize left -$resize_size
        bindsym Shift+Left resize left +$resize_size

        bindsym Down resize bottom +$resize_size
        bindsym Shift+Down resize bottom -$resize_size

        bindsym Up resize top -$resize_size
        bindsym Shift+Up resize top +$resize_size

        bindsym Right resize right +$resize_size
        bindsym Shift+Right resize right -$resize_size

        bind 9 mode default
        bind 36 mode default
}
# Enter resize mode
bindsym $ModKey+s mode resize

# Workspaces ($ModKey+1/2/…)
bind $ModKey+10 1
bind $ModKey+11 2
bind $ModKey+12 3
bind $ModKey+13 4
bind $ModKey+14 5
bind $ModKey+15 6
bind $ModKey+16 7
bind $ModKey+17 8
bind $ModKey+18 9
bind $ModKey+19 10

# Move to Workspaces
bind $ModKey+Shift+10 m1
bind $ModKey+Shift+11 m2
bind $ModKey+Shift+12 m3
bind $ModKey+Shift+13 m4
bind $ModKey+Shift+14 m5
bind $ModKey+Shift+15 m6
bind $ModKey+Shift+16 m7
bind $ModKey+Shift+17 m8
bind $ModKey+Shift+18 m9
bind $ModKey+Shift+19 m10

# $ModKey+Enter starts a new terminal
bind $ModKey+36 exec urxvt

# $ModKey+Shift+q kills the current client
bind $ModKey+Shift+24 kill

# $ModKey+v starts dmenu and launches the selected application
# for now, we don’t have a launcher of our own.
bind $ModKey+55 exec ~/.i3/dmenu.sh

# $ModKey+Shift+e exits i3
bind $ModKey+Shift+26 exit

# $ModKey+Shift+r restarts i3 inplace
bind $ModKey+Shift+27 restart

# The IPC interface allows programs like an external workspace bar
# (i3-wsbar) or i3-msg (can be used to "remote-control" i3) to work.
ipc-socket ~/.i3/ipc.sock

focus_follows_mouse no
new_window bp

workspace 1 output $screen_1 Home
workspace 2 output $screen_1 Work
workspace 3 output $screen_1 wWw
workspace 4 output $screen_1
workspace 5 output $screen_1
workspace 6 output $screen_2
workspace 7 output $screen_2
workspace 8 output $screen_2 Music
workspace 9 output $screen_2 IM
workspace 10 output $screen_2 Right

assign chromium 3
assign qnetsoul 9
assign pidgin 9
assign gimp ~

bind $ModKey+52 exec i3lock -c 111111
bindsym $ModKey+End exec cmus-remote -u
bindsym $ModKey+Prior exec cmus-remote -r
bindsym $ModKey+Next exec cmus-remote -n
bind $ModKey+20 exec amixer sset Master 2%-
bind $ModKey+21 exec amixer sset Master 2%+

workspace_bar no

exec ~/.i3/bar/bar.py
exec ~/.i3/bg.sh
