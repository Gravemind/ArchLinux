#!/bin/bash

if [[ -d "$1" && -d "$2" ]]; then
   emacs --eval "$(printf '(ediff-directories "%q" "%q" ".*")' "$1" "$2")"
   exit $?
elif [[ -f "$1" && -f "$2" ]]; then
   emacs --eval "$(printf '(ediff-files "%q" "%q")' "$1" "$2")"
   exit $?
else
   echo "$0: error files must be both files or both directories." >&2
   exit 1
fi
