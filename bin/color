#!/usr/bin/env python

import sys

def cell(l, styles):
    style = ";".join([str(s) for s in styles if s])
    w=8
    if l == 0:
        sys.stdout.write("\033[{}m┏{:━^{w}}┓".format(style,'',w=w))
    elif l == 1:
        sys.stdout.write("\033[{}m┃{:^{w}}┃".format(style,style,w=w)) # ┣ ┫
    elif l == 2:
        sys.stdout.write("\033[{}m┗{:━^{w}}┛".format(style,'',w=w))
    # if l == 0:
    #     sys.stdout.write("\033[{}m┌{:─^{w}}┐".format(style,'',w=w))
    # elif l == 1:
    #     sys.stdout.write("\033[{}m│{:^{w}}│".format(style,style,w=w)) # ┣ ┫
    # elif l == 2:
    #     sys.stdout.write("\033[{}m└{:─^{w}}┘".format(style,'',w=w))
    # if l == 0:
    #     sys.stdout.write("\033[{}m╭{:─^{w}}╮".format(style,'',w=w))
    # elif l == 1:
    #     sys.stdout.write("\033[{}m│{:^{w}}│".format(style,style,w=w)) # ┣ ┫
    # elif l == 2:
    #     sys.stdout.write("\033[{}m╰{:─^{w}}╯".format(style,'',w=w))

print("\\e[CODE;CODEm\n")

for style in [None, '1']:
    for l in range(0, 3):
        cell(l, [style])
        for foreg in list(range(30, 38)):
            cell(l, [style, foreg])
        sys.stdout.write("\033[0m\n")

for style in ['1']:
    for l in range(0, 3):
        cell(l, [style])
        for foreg in list(range(30, 38)):
            cell(l, [style, foreg, foreg + 10])
        sys.stdout.write("\033[0m\n")

sys.stdout.write("\n")

