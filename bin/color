#!/usr/bin/env python

import sys

def cell(l, styles):
    style = ";".join([str(s) for s in styles if s])
    w=12
    text="\e["+ style + "m"
    #box="┏━┓┃┃┗━┛"
    box="┌─┐││└─┘"
    #box="╭─╮││╰─╯"
    if l == 0:
        sys.stdout.write("\033[{}m{box[0]}{:{box[1]}^{w}}{box[2]}".format(style, '', box=box, w=w))
    elif l == 1:
        sys.stdout.write("\033[{}m{box[3]}{:^{w}}{box[4]}".format(style, text, box=box, w=w)) # ┣ ┫
    elif l == 2:
        sys.stdout.write("\033[{}m{box[5]}{:{box[6]}^{w}}{box[7]}".format(style, '', box=box, w=w))

print()

for style in [None, '1']:
    for l in range(0, 3):
        cell(l, [style])
        for foreg in list(range(30, 38)):
            cell(l, [style, foreg])
        sys.stdout.write("\033[0m\n")

for style in ['1']:
    for l in range(0, 3):
        cell(l, [style])
        for foreg in list(range(30, 38)):
            cell(l, [style, foreg, foreg + 10])
        sys.stdout.write("\033[0m\n")

sys.stdout.write("\n")
