# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true

[*.{c,h,cpp,hpp,inl}]
indent_style = tab
indent_size = 4
tab_width = 4
trim_trailing_whitespace = true

[*.{sh,bash,zsh}]
indent_style = tab
indent_size = 4
tab_width = 8
trim_trailing_whitespace = true

[*.py]
indent_style = space
indent_size = 4
#tab_width = 8
trim_trailing_whitespace = true
