# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
#insert_final_newline = true
#trim_trailing_whitespace = true

[*.{c,h,cpp,hpp,inl}]
indent_style = tab
indent_size = 4
tab_width = 4

[*.{sh,bash,zsh}]
indent_style = tab
indent_size = 4
tab_width = 8

[*.py]
indent_style = space
indent_size = 4
#tab_width = 8

[{CMake*.txt,*.cmake}]
indent_style = space
indent_size = 2
tab_width = 8
